version: '3.7'

networks: 
  traefik:
    external: true
  backend:
    external: false


services: 
  
  dbtwo:
    image: mysql:8.0.19
    container_name: "mysqltwo"
    volumes:
      - db_data:/var/lib/SiteTwo
    restart: always
    environment:
      - MYSQL_ROOT_PASSWORD=123456
      - MYSQL_DATABASE=exampledbtwo
      - MYSQL_USER=admin
      - MYSQL_PASSWORD=123456
    networks:
      - backend
    labels:
      - traefik.enable=false

  wordpress:
    image: wordpress:latest
    container_name: "wordpresstwo"
    restart: always
    labels:
      # The labels are usefull for Traefik only
      - "traefik.enable=true"
      - "traefik.docker.network=traefik"
      # Get the routes from http
      - "traefik.http.routers.wordpresstwo.rule=Host(`wptwo.localhost`)"
      - "traefik.http.routers.wordpresstwo.entrypoints=web"
      # Redirect these routes to https
      - "traefik.http.middlewares.redirect-to-https.redirectscheme.scheme=https"
      - "traefik.http.routers.wordpresstwo.middlewares=redirect-to-https@docker"
      # Get the routes from https
      - "traefik.http.routers.wordpresstwo-secured.rule=Host(`wptwo.localhost`)"
      - "traefik.http.routers.wordpresstwo-secured.entrypoints=web-secure"
      # Apply autentificiation with http challenge
      - "traefik.http.routers.wordpresstwo-secured.tls=true"
      - "traefik.http.routers.wordpresstwo-secured.tls.certresolver=myhttpchallenge"
    environment:
      - WORDPRESS_DB_HOST=dbtwo:3306
      - WORDPRESS_DB_USER=admin
      - WORDPRESS_DB_PASSWORD=123456
      - WORDPRESS_DB_NAME=exampledbtwo
    volumes:
      - ./wordpress/data:/var/www/html/
    depends_on: 
      - dbtwo
    networks: 
      - traefik
      - backend

  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    container_name: "phpmyadmintwo"
    restart: always
    labels:
      # The labels are usefull for Traefik only
      - "traefik.enable=true"
      - "traefik.docker.network=traefik"
      # Get the routes from http
      - "traefik.http.routers.phpmyadmintwo.rule=Host(`dbadmintwo.localhost`)"
      - "traefik.http.routers.phpmyadmintwo.entrypoints=web"
      # Redirect these routes to https
      - "traefik.http.middlewares.redirect-to-https.redirectscheme.scheme=https"
      - "traefik.http.routers.phpmyadmintwo.middlewares=redirect-to-https@docker"
      # Get the routes from https
      - "traefik.http.routers.phpmyadmintwo-secured.rule=Host(`dbadmintwo.localhost`)"
      - "traefik.http.routers.phpmyadmintwo-secured.entrypoints=web-secure"
      # Apply autentificiation with http challenge
      - "traefik.http.routers.phpmyadmintwo-secured.tls=true"
      - "traefik.http.routers.phpmyadmintwo-secured.tls.certresolver=myhttpchallenge"
    environment: 
      PMA_HOST: dbtwo
      MYSQL_ROOT_PASSWORD: 123456
    depends_on: 
      - dbtwo
    networks:
      - traefik
      - backend
  
volumes:
  db_data:
